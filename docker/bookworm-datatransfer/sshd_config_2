#
# WBH Bookworm
#

X11Forwarding no
AllowTcpForwarding no
Subsystem sftp internal-sftp

Match User rbe
    AuthorizedKeysFile /etc/ssh/keys/rbe_authorized_keys
    ChrootDirectory /opt/bookworm/var
    ForceCommand internal-sftp

Match User cew
    AuthorizedKeysFile /etc/ssh/keys/cew_authorized_keys
    ChrootDirectory /opt/bookworm/var/templates
    ForceCommand internal-sftp

Match User wbh
    AuthorizedKeysFile /etc/ssh/keys/wbh_authorized_keys
    ChrootDirectory /opt/bookworm/var/wbh
    ForceCommand internal-sftp
