#
# WBH Bookworm - Admin
#

X11Forwarding no
AllowTcpForwarding no
Subsystem sftp internal-sftp -u 0006

Match User rbe
    AuthorizedKeysFile /etc/ssh/keys/rbe_authorized_keys
    ChrootDirectory /opt/bookworm
    ForceCommand internal-sftp

Match User cew
    AuthorizedKeysFile /etc/ssh/keys/cew/authorized_keys
    ChrootDirectory /opt/bookworm
    ForceCommand internal-sftp
