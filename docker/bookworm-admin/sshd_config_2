#
# WBH Bookworm - Admin
#

X11Forwarding no
AllowTcpForwarding no
Subsystem sftp internal-sftp

Match User rbe
    AuthorizedKeysFile /etc/ssh/authorized_keys_rbe
    ChrootDirectory /opt/bookworm
    ForceCommand internal-sftp

Match User cew
    AuthorizedKeysFile /etc/ssh/authorized_keys_cew
    ChrootDirectory /opt/bookworm
    ForceCommand internal-sftp
