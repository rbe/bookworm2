<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>
                %cyan(%d{HH:mm:ss.SSS}) %gray([%thread]) %highlight(%-5level) %magenta(%logger{36}#%M) - %msg%n
            </pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="wbh.bookworm.hoerbuchdienst" level="${wbh.bookworm.hoerbuchdienst.loglevel:-INFO}"/>
    <logger name="io.micronaut" level="${io.micronaut.loglevel:-ERROR}"/>
    <logger name="io.micronaut.web" level="${io.micronaut.web.loglevel:-ERROR}"/>
    <logger name="io.micronaut.web.router" level="${io.micronaut.web.router.loglevel:-ERROR}"/>
    <logger name="io.micronaut.http" level="${io.micronaut.http.loglevel:-ERROR}"/>
    <logger name="io.micronaut.http.server" level="${io.micronaut.http.server.loglevel:-ERROR}"/>
    <logger name="io.micronaut.scheduling" level="${io.micronaut.scheduling.loglevel:-ERROR}"/>
    <logger name="io.micronaut.rabbitmq" level="${io.micronaut.configuration.rabbitmq.loglevel:-ERROR}"/>
    <logger name="io.micronaut.context" level="${io.micronaut.context.loglevel:-ERROR}"/>
    <logger name="io.micronaut.context.condition" level="${io.micronaut.context.condition.loglevel:-ERROR}"/>
    <logger name="io.micronaut.context.env" level="${io.micronaut.context.env.loglevel:-ERROR}"/>
    <logger name="io.micronaut.core" level="${io.micronaut.core.loglevel:-ERROR}"/>
    <logger name="io.micronaut.core.reflect" level="${io.micronaut.core.reflect.loglevel:-ERROR}"/>
    <logger name="io.netty" level="${io.netty.loglevel:-ERROR}"/>
</configuration>
