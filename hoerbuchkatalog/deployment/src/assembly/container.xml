<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>container</id>
    <formats>
        <format>dir</format>
    </formats>
    <baseDirectory>${project.basedir}</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/docker</directory>
            <outputDirectory>.</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/classes</directory>
            <excludes>
                <exclude>dot_env</exclude>
                <exclude>lifecycle.sh</exclude>
            </excludes>
            <outputDirectory>.</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/dependency/BOOT-INF/classes</directory>
            <includes>
                <include>application-production.yml</include>
                <include>conf/**</include>
            </includes>
            <outputDirectory>hoerbuchkatalog</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/dependency</directory>
            <includes>
                <include>*assembly*.jar</include>
            </includes>
            <outputDirectory>hoerbuchkatalog</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/dependency/templates</directory>
            <outputDirectory>hoerbuchkatalog/templates</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>644</fileMode>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/classes/dot_env</source>
            <destName>.env</destName>
            <outputDirectory>.</outputDirectory>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>target/classes/lifecycle.sh</source>
            <destName>lifecycle.sh</destName>
            <outputDirectory>.</outputDirectory>
            <fileMode>755</fileMode>
        </file>
        <file>
            <source>target/classes/backup.sh</source>
            <destName>backup.sh</destName>
            <outputDirectory>.</outputDirectory>
            <fileMode>755</fileMode>
        </file>
        <file>
            <source>target/classes/setup-ufw.sh</source>
            <destName>setup-ufw.sh</destName>
            <outputDirectory>.</outputDirectory>
            <fileMode>755</fileMode>
        </file>
    </files>
</assembly>
